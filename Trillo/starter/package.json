{
  "name": "trillo",
  "private": true,
  "description": "trillo app",
  "scripts": {
    "postcss:compile": "postcss public/css/style.css --replace --verbose --config ./postcss.config.js",
    "postcss:watch": "npm run postcss:compile -- --watch",
    "postcss:build": "npm run postcss:compile -- --no-map",
    "sass:compile": "sass src/sass/main.scss ./public/css/style.css --color --no-source-map",
    "sass:build": "npm run sass:compile -- --style=compressed",
    "sass:watch": "npm run sass:compile -- --watch --source-map --style=expanded",
    "server": "live-server --open=./public/index.html --watch=./public",
    "dev": "npm-run-all --parallel \"server\" \"sass:watch\"",
    "build": "npm-run-all --serial \"sass:build\" \"postcss:build\""
  },
  "dependencies": {
    "autoprefixer": "^10.2.5",
    "browserslist": "^4.16.6",
    "live-server": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.3.1",
    "rimraf": "^3.0.2",
    "sass": "^1.32.12"
  }
}
