{
  "private": true,
  "scripts": {
    "postcss": "postcss public/css/style.css --replace",
    "presass": "npm run sass:clear",
    "sass": "sass src/main.scss public/css/style.css",
    "sass:clear": "rimraf public/css",
    "sass:build": "npm run sass -- --style=compressed --no-source-map",
    "sass:watch": "npm run sass -- --watch --source-map --color",
    "server": "live-server ./public --watch=.,css",
    "dev": "npm-run-all --parallel \"sass:watch\" \"server\"",
    "build": "npm-run-all --serial \"sass:build\" \"postcss\""
  },
  "dependencies": {
    "autoprefixer": "^10.3.3",
    "live-server": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "rimraf": "^3.0.2",
    "sass": "^1.32.11"
  }
}
